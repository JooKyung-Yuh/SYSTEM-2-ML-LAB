generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsItem {
  id          String     @id @default(cuid())
  date        String
  title       String
  description String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  order       Int        @default(0)
  links       NewsLink[]

  @@index([order])
  @@index([date])
}

model NewsLink {
  id         String   @id @default(cuid())
  text       String
  url        String
  newsItemId String
  newsItem   NewsItem @relation(fields: [newsItemId], references: [id], onDelete: Cascade)

  @@index([newsItemId])
}

model Page {
  id        String    @id @default(cuid())
  slug      String    @unique
  title     String
  content   String?
  published Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  sections  Section[]

  @@index([published])
}

model Section {
  id      String @id @default(cuid())
  title   String
  content String
  layout  String @default("full-width")
  order   Int    @default(0)
  pageId  String
  page    Page   @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@index([pageId])
  @@index([order])
}

model Person {
  id        String   @id @default(cuid())
  name      String
  title     String?
  email     String?  @unique
  phone     String?
  website   String?
  image     String?
  bio       String?
  category  String
  order     Int      @default(0)
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@index([order])
  @@index([published])
}

model Publication {
  id        String   @id @default(cuid())
  title     String
  authors   String
  venue     String
  year      Int
  url       String?
  pdfUrl    String?
  category  String
  order     Int      @default(0)
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([title, authors, venue], name: "title_authors_venue")
  @@index([year])
  @@index([category])
  @@index([order])
  @@index([published])
}

model Course {
  id          String   @id @default(cuid())
  code        String   @unique
  title       String
  description String?
  semester    String
  year        Int
  instructor  String
  credits     Int?
  syllabus    String?
  published   Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([year])
  @@index([semester])
  @@index([order])
  @@index([published])
}

model GalleryItem {
  id          String   @id @default(cuid())
  title       String   @unique
  description String?
  imageUrl    String
  category    String?
  order       Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([order])
  @@index([published])
}
